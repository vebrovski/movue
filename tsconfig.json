{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "sourceMap": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "src/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@images/*": [
        "src/assets/images/*"
      ],
      "@icons/*": [
        "src/assets/icons/*"
      ],
      "@fonts/*": [
        "src/assets/fonts/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@requests/*": [
        "src/utils/requests/*"
      ],
      "@router/*": [
        "src/router/*"
      ],
      "@store/*": [
        "src/store/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*"
  ]
}